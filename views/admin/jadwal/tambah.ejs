<% include ../partials/header %>

<% include ../partials/aside %>

<main class="mn-inner">
    <div class="row">
        <div class="col s12">
            <div class="page-title">Form Tambah Jadwal</div>
        </div>
        <div class="col s6 offset-s3">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Input Jadwal</span><br>
                    <div class="row">
                        <form action="" method="post" class="col s12">
                            <div class="row">
                                <div class="input-field col s12">
                                    <select name="id_supir">
                                        <option value="" readonly selected>Choose your option</option>
                                        <% supir.forEach(function(data) { %>
                                          <option value="<%=data.id_supir%>"><%=data.nama%></option>
                                        <% }) %>
                                    </select>
                                    <label>Nama Supir</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <select name="id_rute">
                                        <option value="" readonly selected>Choose your option</option>
                                        <% rute.forEach(function(data) { %>
                                          <option value="<%=data.id_rute%>"><%= data.cabangAsal.kotum.nama %> - <%= data.cabangAsal.nama_cabang %> to <%= data.cabangTujuan.kotum.nama %> - <%= data.cabangTujuan.nama_cabang %></option>
                                        <% }) %>
                                    </select>
                                    <label>Rute</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <select name="id_mobil">
                                        <option value="" readonly selected>Choose your option</option>
                                        <% mobil.forEach(function(data) { %>
                                          <option value="<%=data.id_unit%>"><%=data.no_polisi%></option>
                                        <% }) %>
                                    </select>
                                    <label>Mobil (Nomor Polisi)</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input placeholder="Masukan Jam Keberangkatan" name="jam_keberangkatan" class="masked" type="text" data-inputmask="'mask': 'h:s'">
                                    <label for="first_name">Jam Keberangkatan</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input placeholder="Masukan Lama Perjalanan" name="lama_perjalanan" type="text">
                                    <label for="first_name">lama Perjalanan (Menit)</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input placeholder="Masukan Kursi Tersedia" name="kursi_tersedia" class="masked" type="text" data-inputmask="'mask': '99'">
                                    <label for="first_name">Kursi Tersedia</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input class="waves-effect waves-light btn" type="submit" value="Simpan">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<% include ../partials/footer %>
<script src="/backend/assets/plugins/google-code-prettify/prettify.js"></script>
<script src="/backend/assets/js/pages/dialogs.js"></script>
<script src="/backend/assets/plugins/jquery-inputmask/jquery.inputmask.bundle.js"></script>
<script src="/backend/assets/js/pages/form-input-mask.js"></script>
<script type="text/javascript">
    var msg = '<%- message %>';
    if(msg) {
      Materialize.toast(msg, 5000);
    }
</script>
