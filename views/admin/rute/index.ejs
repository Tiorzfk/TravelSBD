<% include ../partials/header %>

<% include ../partials/aside %>
<style media="screen">
  table {
    border: 0;
  }
</style>
<main class="mn-inner">
  <div class="row">
      <div class="col s12 m12 l12">
          <div class="card">
              <div class="card-content">
                  <span class="card-title">Management Rute</span>
                  <a href="/admin/rute/add" class="waves-effect waves-light btn m-b-xs">Tambah</a>
                  <table id="example" class="display responsive-table datatable-example">
                      <thead>
                          <tr>
                              <th>ID</th>
                              <th>Cabang Asal</th>
                              <th>Cabang Tujuan</th>
                              <th>Harga</th>
                              <th width="20%">Option</th>
                          </tr>
                      </thead>
                      <tfoot>
                          <tr>
                              <th>ID</th>
                              <th>Cabang Asal</th>
                              <th>Cabang Tujuan</th>
                              <th width="20%">Option</th>
                          </tr>
                      </tfoot>
                      <tbody>
                        <% data.forEach(function(data) { %>
                          <tr>
                              <td><%= data.id_rute %></td>
                              <td><%= data.cabangAsal.kotum.nama %> - <%= data.cabangAsal.nama_cabang %></td>
                              <td><%= data.cabangTujuan.kotum.nama %> - <%= data.cabangTujuan.nama_cabang %></td>
                              <td><%= data.harga %></td>
                              <td><a href="/admin/rute/edit/<%=data.id_rute%>" class="waves-effect waves-light btn m-b-xs"> Edit </a>
                                <a onclick="return confirm('Apakah Anda Yakin ?')" href="/admin/rute/delete/<%=data.id_rute%>" class="waves-effect waves-light btn pink m-b-xs"> Hapus </a></td>
                          </tr>
                        <% }); %>
                      </tbody>
                  </table>
              </div>
          </div>
      </div>
  </div>
</main>

<% include ../partials/footer %>
<script src="/backend/assets/plugins/google-code-prettify/prettify.js"></script>
<script src="/backend/assets/js/pages/dialogs.js"></script>
<script type="text/javascript">
    var msg = '<%- message %>';
    if(msg) {
      Materialize.toast(msg, 5000);
    }
</script>
