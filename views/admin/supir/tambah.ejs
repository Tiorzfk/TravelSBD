<% include ../partials/header %>

<% include ../partials/aside %>

<main class="mn-inner">
    <div class="row">
        <div class="col s12">
            <div class="page-title">Form Tambah Supir</div>
        </div>
        <div class="col s6 offset-s3">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Input Kota</span><br>
                    <div class="row">
                        <form action="" method="post" class="col s12">
                            <div class="row">
                                <div class="input-field col s12">
                                    <input placeholder="Masukan Nama Supir" name="nama" type="text">
                                    <label for="first_name">Nama</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input placeholder="Masukan Alamat Supir" name="alamat" type="text">
                                    <label for="first_name">Alamat</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input placeholder="Masukan Nomor Telepon" name="no_telp" type="text">
                                    <label for="first_name">Nomor Telepon</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                  <div class="file-field input-field">
                                    <div class="btn teal lighten-1">
                                      <span>Foto</span>
                                      <input type="file" name="foto">
                                    </div>
                                    <div class="file-path-wrapper">
                                      <input class="file-path validate" type="text">
                                    </div>
                                  </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input class="waves-effect waves-light btn" type="submit" value="Simpan">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<% include ../partials/footer %>
<script src="/backend/assets/plugins/google-code-prettify/prettify.js"></script>
<script src="/backend/assets/js/pages/dialogs.js"></script>
<script type="text/javascript">
    var msg = '<%- message %>';
    if(msg) {
      Materialize.toast(msg, 5000);
    }
</script>
